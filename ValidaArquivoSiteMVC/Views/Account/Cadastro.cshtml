@model ValidaArquivoSiteMVC.Models.UsuarioModel
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <title>Cadastro</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <style>
        img {
            border: 3px solid;
            border-color: cadetblue;
            width: auto;
            height: auto;
        }
    </style>
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <fieldset>
                    <legend>Cadastro de usuário</legend>
                    <div id="" class="col-md-2">
                        <img class="img-responsive" src="~/images/logo.jpg" />
                    </div>
                    <div id="" class="col-md-4">
                        @using (Html.BeginForm("Cadastrar", "Account", FormMethod.Post, new { @class = "", enctype = "multipart/form-data" }))
                        {        
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Nome, new { placeholder = "Nome", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Nome)
                            </div>                            
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Email, new { placeholder= "Email", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Senha, new { placeholder = "Senha", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Senha)
                            </div>
                            <p>
                                <input class="btn btn-primary" type="submit" value="Cadastrar" />
                            </p>
                            <p id="mensagem">
                                @TempData["mensagem"]
                            </p>
                        }
                        <p>
                            @Html.ActionLink("Voltar", "Index")
                        </p>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
    <script src="~/JQuery/jquery-1.11.3.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
